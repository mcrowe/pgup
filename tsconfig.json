{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "outDir": "lib/",
    "target": "es2015",
    "noImplicitAny": false,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true
  },
  "include": [
    "src/**/*"
  ],
  "allowJS": false,
  "compileOnSave": true
}